@model EmployeeManagementMVC.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>

<div class="alert alert-danger">
    <strong>Are you sure you want to delete this employee?</strong>
</div>

<dl class="row">
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">Department</dt>
    <dd class="col-sm-9">@Model.Department</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
